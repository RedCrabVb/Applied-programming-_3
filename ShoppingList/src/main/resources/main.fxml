                        <ListView fx:id="shoppingListDateCompleted" layoutX="435.0" layoutY="50.0" prefHeight="275.0" prefWidth="192.0" />
                     </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Создать покупку">
