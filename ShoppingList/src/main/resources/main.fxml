                        <AnchorPane>
                     <children>
                        <Label fx:id="namePurchase" layoutX="20.0" layoutY="14.0" text="Название покупки" />
                        <TextField layoutX="20.0" layoutY="30.0" />
                        <Label layoutX="20.0" layoutY="68.0" text="Дата напоминания" />
                        <TextField layoutX="20.0" layoutY="91.0" />
