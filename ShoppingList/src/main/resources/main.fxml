                        <Label layoutX="219.0" layoutY="22.0" text="Заметка" />
                        <Button fx:id="addPurchase" layoutX="68.0" layoutY="302.0" mnemonicParsing="false" text="Добавить" />
                     </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
